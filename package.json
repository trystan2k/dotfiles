{
  "name": "@trystan2k/dotfiles",
  "version": "16.4.1",
  "description": "My personal dotfiles",
  "keywords": [
    "dotfiles",
    "trystan2k",
    "brew",
    "macos"
  ],
  "homepage": "https://github.com/trystan2k/dotfiles#readme",
  "bugs": {
    "url": "https://github.com/trystan2k/dotfiles/issues"
  },
  "repository": "github:trystan2k/dotfiles",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules",
    "cz": "git-cz",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm run lint:bash && pnpm run lint:eslint",
    "lint:bash": "bash shellcheck.sh",
    "lint:eslint": "eslint . --fix",
    "prepare": "husky",
    "push": "git push && git push --tags",
    "release": "standard-version -a",
    "release:as": "standard-version --release-as"
  },
  "lint-staged": {
    "*.json": [
      "pnpm run lint:eslint"
    ],
    "*.md": [
      "pnpm run lint:eslint"
    ],
    "*.sh": [
      "pnpm run lint:bash"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-markdownlint": "^0.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "standard-version": "^9.5.0"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore: release {{currentTag}}"
  }
}
