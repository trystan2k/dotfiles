{
    "name": "@trystan2k/dotfiles",
    "version": "9.7.0",
    "description": "My personal dotfiles",
    "keywords": [
        "dotfiles",
        "trystan2k",
        "brew",
        "macos",
        "linux"
    ],
    "homepage": "https://github.com/trystan2k/dotfiles#readme",
    "bugs": {
        "url": "https://github.com/trystan2k/dotfiles/issues"
    },
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:trystan2k/dotfiles.git"
    },
    "scripts": {
        "lint": "npm run lint:bash && npm run lint:eslint && npm run lint:md",
        "lint:bash": "bash shellcheck.sh",
        "lint:eslint": "eslint --ext json . --fix",
        "lint:md": "markdownlint --fix -i node_modules .",
        "push": "git push && git push --tags",
        "release": "standard-version",
        "release:as": "standard-version --release-as"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                100
            ]
        }
    },
    "lint-staged": {
        "*.json": [
            "npm run lint:eslint"
        ],
        "*.md": [
            "npm run lint:md"
        ],
        "*.sh": [
            "npm run lint:bash"
        ],
        "package.json": [
            "sort-package-json"
        ]
    },
    "prettier": {
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json-stringify"
                }
            }
        ]
    },
    "eslintConfig": {
        "plugins": [
            "markdown",
            "json"
        ],
        "extends": [
            "plugin:json/recommended"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-json": "^2.1.1",
        "eslint-plugin-markdown": "^1.0.2",
        "husky": "^2.2.0",
        "lint-staged": "^10.2.11",
        "markdownlint": "^0.20.3",
        "markdownlint-cli": "^0.23.1",
        "prettier": "^2.0.5",
        "sort-package-json": "^1.44.0",
        "standard-version": "^8.0.0"
    },
    "standard-version": {
        "releaseCommitMessageFormat": "chore: release {{currentTag}}"
    }
}
