{
  "name": "@trystan2k/dotfiles",
  "version": "12.19.0",
  "description": "My personal dotfiles",
  "keywords": [
    "dotfiles",
    "trystan2k",
    "brew",
    "macos"
  ],
  "homepage": "https://github.com/trystan2k/dotfiles#readme",
  "bugs": {
    "url": "https://github.com/trystan2k/dotfiles/issues"
  },
  "repository": "github:trystan2k/dotfiles",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules",
    "commit": "git-cz",
    "lint": "npm run lint:bash && npm run lint:eslint && npm run lint:md",
    "lint:bash": "bash shellcheck.sh",
    "lint:eslint": "eslint . --fix",
    "lint:md": "markdownlint --fix .",
    "prepare": "husky install",
    "push": "git push && git push --tags",
    "release": "standard-version -a",
    "release:as": "standard-version --release-as"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ]
    }
  },
  "lint-staged": {
    "*.json": [
      "npm run lint:eslint"
    ],
    "*.md": [
      "npm run lint:md"
    ],
    "*.sh": [
      "npm run lint:bash"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^5.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.40.0",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.0",
    "standard-version": "^9.5.0"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore: release {{currentTag}}"
  }
}
