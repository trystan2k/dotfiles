{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:8080/v1",
        "includeUsage": true
      },
      "models": {
        "Qwen3-8B-GGUF": {
          "tool_call": true,
          "name": "Qwen/Qwen3-8B"
        }
      }
    }
  },
  "instructions": [
    "AGENTS.md"
  ],
  "theme": "cobalt2",
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/gpt-4.1",
  "autoupdate": true,
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "task-master-ai": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": [
        "repomix",
        "--mcp"
      ],
      "enabled": false
    },
    "basic-memory": {
      "type": "local",
      "command": [
        "uvx",
        "basic-memory",
        "mcp"
      ],
      "enabled": false
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "playwright": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--isolated",
        "--output-dir=./playwright"
      ]
    },
    "serena": {
      "type": "local",
      "enabled": false,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    }
  }
}