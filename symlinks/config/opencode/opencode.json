{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:8080/v1",
        "includeUsage": true
      },
      "models": {
        "Qwen3-8B-GGUF": {
          "tool_call": true,
          "name": "Qwen/Qwen3-8B"
        }
      }
    },
    "github-copilot": {
      "models": {
        "claude-sonnet-4.5": {
          "limit": {
            "context": 256000,
            "output": 32000
          }
        }
      }
    }
  },
  "instructions": [
    "AGENTS.md"
  ],
  "theme": "cobalt2",
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "autoupdate": true,
  "mcp": {
    "mcp_chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "mcp_task-master-ai": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "enabled": false
    },
    "mcp_context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    },
    "mcp_repomix": {
      "type": "local",
      "command": [
        "repomix",
        "--mcp"
      ],
      "enabled": false
    },
    "mcp_basic-memory": {
      "type": "local",
      "command": [
        "uvx",
        "basic-memory",
        "mcp"
      ],
      "enabled": false
    },
    "mcp_github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "mcp_playwright": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--isolated",
        "--output-dir=./playwright"
      ]
    },
    "mcp_serena": {
      "type": "local",
      "enabled": false,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    },
    "mcp_shadcn-ui": {
      "enabled": false,
      "type": "local",
      "command": [
        "npx",
        "@jpisnice/shadcn-ui-mcp-server"
      ]
    }
  }
}