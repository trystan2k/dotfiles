# Alias for npm install -g, to install global tools into $PATH_TO_GLOBAL_NODE_MODULES
npmig() {
    if [ -z "$PATH_TO_GLOBAL_NODE_MODULES" ]; then
        echo "Error: PATH_TO_GLOBAL_NODE_MODULES environment variable is not set"
        return 1
    fi
    
    if [ ! -d "$PATH_TO_GLOBAL_NODE_MODULES" ]; then
        mkdir -p "$PATH_TO_GLOBAL_NODE_MODULES"
    fi
    
    local action=$1
    if [ -z "$action" ]; then
        action="install"
    else if [ "$action" = "update" ] || [ "$action" = "upgrade" ]; then
        action="install"
        shift  # Remove the action from arguments
    else if [ "$action" = "info" ] || [ "$action" = "list" ] || [ "$action" = "outdated" ]; then
        shift
    fi
    fi
    fi
    
    npm "$action" --prefix "$PATH_TO_GLOBAL_NODE_MODULES" "$@"
}

